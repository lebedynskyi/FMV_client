<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlowButton">
        <attr name="text" format="string"/>
        <attr name="text_gravity" format="enum">
            <enum name="center" value="1"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="leftDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RefreshableViewPager">
        <attr name="scrollable" format="boolean"/>
        <attr name="autoRefresh" format="boolean"/>
        <attr name="refreshDelay" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PlayerSliding">
        <attr name="handleID" format="reference"/>
        <attr name="contentID" format="reference"/>
    </declare-styleable>
</resources>