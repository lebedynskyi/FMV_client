<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp" android:padding="7dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text  RelativeLayout RelativeLayout"
            android:id="@+id/song_name" android:textColor="@color/white" android:textSize="22sp"
            android:singleLine="true" android:ellipsize="marquee"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/song_artist" android:layout_below="@+id/song_name" android:textColor="@color/white"
            android:textSize="17sp" android:singleLine="true" android:editable="false" android:ellipsize="end"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:id="@+id/song_duration" android:layout_alignParentTop="false" android:layout_alignParentRight="true"
            android:textColor="@color/white" android:layout_alignTop="@+id/song_artist"/>
</RelativeLayout>