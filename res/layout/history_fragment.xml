<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:glow_btn="http://schemas.android.com/apk/res/com.music.fmv"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.music.fmv.views.GlowButton android:layout_width="wrap_content"
          android:layout_height="50dp"
          glow_btn:text="@string/search_history_title"
          android:enabled="false"
          android:focusable="false"
          android:id="@+id/view"/>
    <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView android:id="@+id/history_listview"
                  android:layout_width="match_parent"
                  android:cacheColorHint="#00000000"
                  android:layout_height="match_parent"/>
        <TextView android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true"
                android:text="@string/empty_list"/>
    </RelativeLayout>
</LinearLayout>