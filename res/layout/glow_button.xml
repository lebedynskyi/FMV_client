<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/black_background_selector"
        >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_image" android:layout_centerVertical="true"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/blue_button_text_view" android:layout_centerInParent="true" android:textSize="18sp"
            android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_toRightOf="@+id/left_image"/>
</RelativeLayout>